{
  "name": "tdb-investor-relations",
  "version": "1.0.0",
  "description": "Trade & Development Bank of Mongolia - Premium Investor Relations Website",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "build:production": "npm run type-check && vite build --mode production",
    "deploy": "npm run build:production && gh-pages -d dist"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "motion": "^10.16.2",
    "lucide-react": "^0.263.1",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "tailwindcss": "^4.0.0-alpha.4",
    "autoprefixer": "^10.4.14",
    "gh-pages": "^6.0.0",
    "@types/node": "^20.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/munkh992/tdb-investor.git"
  },
  "keywords": [
    "banking",
    "investor-relations",
    "mongolia",
    "finance",
    "tdb",
    "trade-development-bank"
  ],
  "author": "Trade & Development Bank of Mongolia",
  "license": "MIT",
  "homepage": "https://munkh992.github.io/tdb-investor"
}
